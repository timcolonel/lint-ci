<header>
  <div class="header-left">
    <a href="/"><h1>Lint CI</h1></a>
  </div>
  <div class="header-right">
    <% if user_signed_in? %>
        <div class="nav-item">
          <h3 class="username">
            <%= link_to current_user.username, user_settings_path %>
          </h3>
        </div>
        <div class="nav-item">
          <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'logout' %>
        </div>
    <% else %>
        <a class="github-sign-in" href="<%= user_omniauth_authorize_path(:github) %>">
            Sign in with Github <%= fa_icon 'github' %>
        </a>
    <% end %>
  </div>
</header>
